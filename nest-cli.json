{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "mail/templates/**/*.hbs",
      {
        "include": "../node_modules/paastech-proto/**/*.proto",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}
